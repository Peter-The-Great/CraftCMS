{% extends "_layouts/main" %}
{% block main %}
<section class="container">
  <div class="row">
    {% set entries = entry.about.all() %}
    {% if entries|length %}
      {% for block in entries %}
        {% if block.type == "body" %}
        <span class="text-white">{{ block.body }}</span>
        {% elseif block.type == "video" %}
        <iframe class="mb-3" src="{{ block.videolink }}" title="{{ block.videonaam }}" width="560" height="315" allowfullscreen></iframe>
        {% endif %}
      {% endfor %}
    {% endif %}
  </div>
</section>
{% endblock %}